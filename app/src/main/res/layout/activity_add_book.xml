<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddBook">


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="165dp"
        android:layout_height="184dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout01"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_teach_home" />

    <TextView
        android:id="@+id/slogon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/oswald"
        android:text="Add Book"
        android:textColor="#FEFEFE"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/backimg3"
        android:layout_width="85dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/back" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="53dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/addbook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13">

        <EditText
            android:id="@+id/i_title"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Enter Book Title"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="center"
            android:textColor="#83090707"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/i_author"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Enter Author's Name"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="center"
            android:textColor="#83090707"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/i_noofBooks"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="Enter Number Of Books"
            android:inputType="textPersonName"
            android:paddingStart="10sp"
            android:paddingBottom="15sp"
            android:textAlignment="center"
            android:textColor="#83090707"
            android:textColorLink="#83090707"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/i_contact"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/btn2"
            android:ems="10"
            android:fontFamily="@font/oswald"
            android:hint="How to Contact"
            android:inputType="date|datetime"
            android:paddingStart="10sp"
            android:textAlignment="center"
            android:textColor="#83090707"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbook"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/btn1"
        android:text="Add Book"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout01"
        app:layout_constraintVertical_bias="0.175" />

</androidx.constraintlayout.widget.ConstraintLayout>