<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_marginBottom="61dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="202dp"
        android:layout_height="83dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="-231dp"
        android:layout_marginEnd="95dp"
        android:fontFamily="@font/oswald"
        android:text="Course List"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backimg6"
        android:layout_width="64dp"
        android:layout_height="69dp"
        app:srcCompat="@drawable/back" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView13"
        android:layout_margin="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-267dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/white">

        <!-- Table Heading -->

        <TableRow android:background="@color/Inputs">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/InputFiels"
                android:fontFamily="@font/oswald"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="CourseID"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/InputFiels"
                android:fontFamily="@font/oswald"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@color/InputFiels"
                android:fontFamily="@font/oswald"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Duration"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </TableRow>

        <!-- Table Data -->

        <TableRow android:id="@+id/Course1">

            <TextView
                android:id="@+id/CID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="IT2090"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Cname"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="MAD"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Chour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="45Hours"
                android:textSize="14sp" />

        </TableRow>

        <TableRow android:background="@color/InputFiels">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="12sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:textSize="12sp" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="-83dp"
        app:srcCompat="@drawable/ic_launcher_teach_foreground" />

</RelativeLayout>