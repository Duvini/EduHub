<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ReadBook">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="165dp"
        android:layout_height="184dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_teach_home" />

    <TextView
        android:id="@+id/REbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/oswald"
        android:text="Book Info"
        android:textColor="#FEFEFE"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/btn2"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:text="Name :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_title"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textsView14"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:text="Author :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_author"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViesw14"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:text="No Of Books :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_noOfBook"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVieaw14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/oswald"
                android:text="How to Contact :"
                android:textAlignment="viewStart"
                android:textColor="@color/p_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/r_contact"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="15sp"
                android:ems="10"
                android:paddingStart="10sp"
                android:paddingBottom="15sp"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="74dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editBtn"
                android:layout_width="112dp"
                android:layout_height="49dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn1"
                android:fontFamily="@font/oswald"
                android:text="Edit Book"
                android:textAlignment="center"
                android:textColor="#FEFEFE"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LinearLayout01" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/backimg77"
        android:layout_width="95dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteY="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>