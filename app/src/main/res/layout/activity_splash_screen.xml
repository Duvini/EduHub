<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pcolor"
    tools:context=".SplashScreen">


  <ImageView
      android:id="@+id/logo"
      android:layout_width="204dp"
      android:layout_height="214dp"
      android:layout_marginStart="123dp"
      android:layout_marginEnd="123dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.507"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.194"
      app:srcCompat="@mipmap/logo_splash" />

  <TextView
      android:id="@+id/slogon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:fontFamily="@font/oswald"
      android:text="Unleash Your Future"
      android:textAlignment="center"
      android:textColor="@color/pgrey"
      android:textSize="45sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.495"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/logo" />



  <TextView
      android:id="@+id/subtitle"
      android:layout_width="272dp"
      android:layout_height="69dp"
      android:layout_marginTop="108dp"
      android:fontFamily="@font/oswald"
      android:text="@string/subti"
      android:textAlignment="center"
      android:textColor="@color/pgrey"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/slogon" />

  <View
      android:id="@+id/bgprogress"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginBottom="4dp"
      android:background="@color/fontBlue1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <View
      android:id="@+id/bgprogresstop"
      android:layout_width="408dp"
      android:layout_height="51dp"
      android:layout_marginBottom="4dp"
      android:background="@color/pgrey"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/startbutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      android:fontFamily="@font/oswald"
      android:text="Start Now"
      android:textAlignment="center"
      android:textColor="@color/Pcolor"
      android:textSize="22sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>